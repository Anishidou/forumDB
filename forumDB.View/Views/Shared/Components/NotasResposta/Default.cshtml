@model forumDB.Model.Nota


@{
    ViewData["Title"] = "Create";
}

<div>
    @*<form asp-action="Create">*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-check">
                    <input type="submit" asp-action="UpVote" asp-controller="Notas" class="btn-check" type="radio" name="flexRadioDefault" id="flexRadioDefault1" value="Up">
                    <label class="btn btn-outline-primary" for="flexRadioDefault1">UpVote</label><br>
                </div>
                <div class="form-check">
                    <input type="submit" asp-action="DownVote" asp-controller="Notas" class="btn-check" type="radio" name="flexRadioDefault" id="flexRadioDefault2" value="Down">
                    <label class="btn btn-outline-primary" for="flexRadioDefault2">DownVote</label><br>
                </div>
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IdPergunta" class="form-control" value="@ViewData["idPergunta"]" />
            </div>
            <div class="form-group">
                <input asp-for="IdResposta" class="form-control" value="@ViewData["idResposta"]" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" style="margin-top: 1vh;" />
            </div>
    @*</form>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
